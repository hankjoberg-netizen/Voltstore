<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>VoltStore âš¡</title>
  <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
  <!-- Header -->
  <header class="site-header">
    <div class="container">
      <h1 class="logo">âš¡ VoltStore</h1>
      <a href="/cart" class="cart-btn">ðŸ›’ Cart (<%= cartCount || 0 %>)</a>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h2>Fresh tech, shipped by <span>VoltStore</span></h2>
      <p>Browse our curated gadgets. Click a product to see details and buy directly from us.</p>
      <form action="/" method="GET" class="search-form">
        <input type="text" name="q" placeholder="Search products..." />
        <button type="submit">Search</button>
      </form>
    </div>
  </section>

  <!-- Products Grid -->
  <main class="container">
    <div class="product-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <img src="<%= product.image %>" alt="<%= product.name %>" />
          <h3><%= product.name %></h3>
          <p class="price">$<%= product.price.toFixed(2) %></p>
          <p class="description"><%= product.description %></p>
          <div class="actions">
            <form action="/cart/add/<%= product.id %>" method="POST">
              <button type="submit">Add to Cart</button>
            </form>
            <a href="/product/<%= product.id %>" class="details-btn">Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <p>âš¡ VoltStore Â© <%= new Date().getFullYear() %>. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
