<%- include('partials/header', { title: 'Shop Tech Gadgets' }) %>
<section class="container" style="padding:24px">
  <h1>VoltStore ✅</h1>
  <p>If you can see this, EJS is working.</p>

  <p><a href="/ping">Test /ping</a></p>

  <% if ((products || []).length === 0) { %>
    <p>No products loaded. That’s ok for this test.</p>
  <% } else { %>
    <ul>
      <% products.forEach(p => { %>
        <li><a href="/product/<%= p.id %>"><%= p.name %></a> — $<%= p.price %></li>
      <% }) %>
    </ul>
  <% } %>
</section>
<%- include('partials/footer') %>
